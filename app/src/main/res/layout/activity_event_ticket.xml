<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventTicket"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/capsule5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/event_name"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name of Event"
            android:gravity="center"
            android:textSize="30dp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/powerd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="powerd by username"
            android:textSize="20dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:gravity="center"
            android:id="@+id/tickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="x tickets left"
            android:textSize="30dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>
    <EditText
        android:layout_marginTop="20dp"
        android:background="@drawable/capsule0"
        android:id="@+id/et_name"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:hint="Customer Name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="10dp"   />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:layout_marginRight="10dp"
            android:background="@drawable/capsule0"
            android:id="@+id/et_barcode"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:hint="Barcode"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@drawable/capsule1"
            android:drawableRight="@drawable/btn_scan" />
    </LinearLayout>
    <Spinner
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/capsule0"
        android:id="@+id/sp"
        android:textAlignment="center">
    </Spinner>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:gravity="right">
        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:text="Total price: 0"
            android:textSize="25dp"
            android:id="@+id/price"/>
        <Button
            android:textColor="#000"
            android:background="@drawable/capsule1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="save"
            android:id="@+id/btn_save"/>
    </LinearLayout>

</LinearLayout>