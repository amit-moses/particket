<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyEventInfo"
    android:gravity="center|top"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="event name"
            android:paddingLeft="10dp"
            android:textSize="25sp"
            android:id="@+id/event_name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/capsule7"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ticket_sold"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="0"
                android:textSize="30sp"
                android:gravity="center"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Tickets sold"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/capsule7"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/your_earn"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="0"
                android:textSize="30sp"
                android:gravity="center"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Your earnings"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/capsule7"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/number_sellers"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="0"
                android:textSize="30sp"
                android:gravity="center"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Sellers"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/capsule7"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sellers_earn"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="0"
                android:textSize="30sp"
                android:gravity="center"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Sellers earnings"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/capsule7"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sold_percent"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="0"
                android:textSize="30sp"
                android:gravity="center"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Sold percent"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/capsule7"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/arrive_customers"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="0"
                android:textSize="30sp"
                android:gravity="center"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Arrive customers"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="275dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Sale active"
            android:textSize="20sp" />
        <Switch
            android:layout_marginTop="5dp"
            android:id="@+id/sale_active"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="275dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Ticketing active"
            android:textSize="20sp" />
        <Switch
            android:layout_marginTop="5dp"
            android:id="@+id/ticketing_active"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="2"
            android:scaleY="2"/>
    </LinearLayout>



</LinearLayout>