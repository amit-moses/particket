<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/head_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seller working details"
            android:textSize="28sp"
            android:textColor="#ff000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/profile_img"
            android:background="@drawable/profile"
            android:layout_marginRight="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView

            android:layout_gravity="center_vertical"
            android:layout_width="205dp"
            android:layout_height="60dp"
            android:id="@+id/event_name"
            android:textSize="22sp"
            android:textColor="#000"
            android:textAlignment="center"
            android:text="Event name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp">
        <LinearLayout
            android:layout_marginRight="5dp"
            android:background="@drawable/capsule7"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ticket_sold"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="0"
                android:textSize="30sp"
                android:gravity="center"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Tickets sold"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:background="@drawable/capsule7"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/seller_earn"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="0"
                android:textSize="30sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/aa1"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Earnings"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:layout_width="270dp"
        android:layout_height="wrap_content">
        <LinearLayout

            android:background="@drawable/capsule7"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/keep"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="0"
                android:textSize="30sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/aa2"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Keeping"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_reset"
            android:layout_width="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:text="reset"
            android:background="@drawable/capsule1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp">
            <Button
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="close"
                android:id="@+id/btn_ok"
                android:background="@drawable/capsule1"
                android:textColor="#ffffffff"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>